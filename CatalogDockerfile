# ---------- Stage 1: Build ----------
FROM eclipse-temurin:21-jdk-alpine AS build
WORKDIR /app

# Copy maven wrapper + pom.xml
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .

# Download dependencies (cache layer)
RUN ./mvnw dependency:go-offline -B

# Copy source code
COPY src src

# Build jar (with spring-boot plugin)
RUN ./mvnw clean package -DskipTests

# ---------- Stage 2: Run ----------
FROM eclipse-temurin:21-jre-alpine
WORKDIR /app

# Copy jar from build stage
COPY --from=build /app/target/catalog-service-1.0.0-SNAPSHOT.jar app.jar

# Copy wait-for-it.sh script
COPY wait-for-it.sh /wait-for-it.sh
RUN chmod +x /wait-for-it.sh

EXPOSE 8081

# Use wait-for-it to wait for Postgres before starting app
ENTRYPOINT ["sh", "/wait-for-it.sh", "postgres", "5432", "--", "java", "-jar", "app.jar"]
